<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@color/index"
        android:id="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="148dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/title"
            android:textSize="25sp"
            android:text="社团管理"/>
    </LinearLayout>

    <com.jude.rollviewpager.RollPagerView
        android:id="@+id/roll_view_pager"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:rollviewpager_play_delay="3000"
        android:layout_below="@+id/linearLayout" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@drawable/leba_shape_line"/>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/tongzhi"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_weight="0.25"
      android:background="@drawable/boder"
        android:orientation="vertical">
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/i_tz"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="10dp"
            android:text="社团通知"/>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/zhaoxin"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:background="@drawable/leba_bg_single_selector"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/i_nx"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:text="社团纳新"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:background="@drawable/boder"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/i_xc"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:text="社团相册"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:background="@drawable/boder"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/i_zz"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:text="寻找赞助"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@drawable/leba_shape_line"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp">

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@drawable/leba_shape_line"/>
    <LinearLayout
        android:id="@+id/allcommunity"
        style="@style/leba_bg_single_layout">
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/all_community"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:text="所有社团"/>
        <ImageButton
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/enter"/>
    </LinearLayout>
    <!--   </LinearLayout>-->
    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@drawable/leba_shape_line"/>


    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@drawable/leba_shape_line"/>
    <LinearLayout
        style="@style/leba_bg_single_layout">
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/my_community"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:text="我的社团"/>
        <ImageButton
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/enter"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@drawable/leba_shape_line"/>



</LinearLayout>