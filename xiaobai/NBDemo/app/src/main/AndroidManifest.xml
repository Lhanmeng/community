        android:name=".config.NBDemo"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activity.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SplashActivity"/>
       <activity android:name=".activity.MainActivity"/>
        <activity android:name=".activity.LoginActivity"/>
        <activity android:name=".activity.IssueActivity"/>
        <activity android:name=".activity.IssuedetaiActivity"/>
        <activity android:name=".activity.CommentActivity"/>
        <activity android:name=".activity.RegisterActivity"/>
        <activity android:name=".activity.ReleaseActivity"/>
        <activity android:name=".activity.PersonActivity"/>
        <activity android:name=".activity.PersonalActivity"/>
        <activity android:name=".activity.CollectionActivity"/>
        <activity android:name=".activity.BookActivity"/>
        <activity android:name=".activity.BookgzActivity"/>
        <activity android:name=".activity.BookdtActivity"/>
        <activity android:name=".activity.SettingActivity"/>
        <activity android:name=".activity.SearchActivity"/>
        <activity android:name=".activity.PersonFeedbackActivity"/>
        <activity android:name=".activity.MyissueActivity"/>
        <activity android:name=".activity.MyMessageActivity"></activity>
           <activity android:name=".activity.SkinActivity"/>

    </application>

</manifest>