<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10.0dp">

        <Button
            android:id="@+id/blue_btn"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginRight="5.0dp"
            android:background="@color/skin_blue"
            android:text="" />

        <Button
            android:id="@+id/pink_btn"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="5.0dp"
            android:background="@color/skin_pink"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10.0dp">

        <Button
            android:id="@+id/yellow_btn"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginRight="5.0dp"
            android:background="@color/skin_yellow"
            android:text="" />

        <Button
            android:id="@+id/sblue_btn"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="5.0dp"
            android:background="@color/skin_sblue"
            android:text="" />
    </LinearLayout>
</LinearLayout>